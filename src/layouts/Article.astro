---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  fontmatter: {
    title: string;
    description: string;
    pubdate: string;
    author: string;
    image: {
      url: string;
      alt: string;
    };
  };
}

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <h1>{frontmatter.title}</h1>
  <p><em>{frontmatter.description}</em></p>
  <cite>{frontmatter.pubDate.slice(0, 10)}</cite>
  <p>{frontmatter.author}</p>
  <img src={frontmatter.image.url} width="650" alt={frontmatter.image.alt} />

  <slot />
</BaseLayout>
