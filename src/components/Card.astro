---
import TechTag from "./TechTag.astro";

interface Props {
  url?: string;
  title: string;
  description: string;
  image: {
    url: string;
    alt: string;
  };
  pubDate?: string;
  technologies?: string[];
}

const { url, title, image, description, pubDate, technologies } = Astro.props;
---

<div class="card-wrapper">
  <a class="secondary" href={url}>
    <article>
      <div class="image-wrapper">
        <img src={image.url} alt={image.alt} />
      </div>
      <div class="content">
        <h5>{title}</h5>
        <small class="description">{description}</small>
        {technologies && technologies.length > 0 && (
          <div class="tech-tags">
            {technologies.map(tech => (
              <TechTag technology={tech} />
            ))}
          </div>
        )}
        {pubDate && <small class="footer">{pubDate.slice(0, 10)}</small>}
      </div>
    </article>
  </a>
</div>

<style>
  .card-wrapper {
    max-width: 700px;
  }

  /* Enhanced card with glass morphism */
  article {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s var(--transition-smooth);
    backdrop-filter: blur(10px);
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  /* Animated gradient border on hover */
  article::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 12px;
    padding: 1px;
    background: linear-gradient(135deg, var(--accent-cyan), var(--accent-green));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  article:hover::before {
    opacity: 1;
  }

  article:hover {
    transform: translateY(-4px);
    box-shadow: var(--card-shadow-hover);
    border-color: rgba(0, 212, 255, 0.3);
  }

  /* Image container */
  .image-wrapper {
    position: relative;
    overflow: hidden;
    width: 100%;
    aspect-ratio: 16 / 9;
  }

  .image-wrapper::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    pointer-events: none;
  }

  /* Image with zoom effect on hover */
  article img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s var(--transition-smooth);
  }

  article:hover img {
    transform: scale(1.05);
  }

  /* Content section */
  .content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
  }

  h5 {
    margin: 0 0 0.5rem 0 !important;
    color: #fff;
  }

  .description {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
    flex: 1;
  }

  .footer {
    margin: 0;
    color: var(--accent-cyan);
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    margin-top: auto;
    padding-top: 0.75rem;
  }

  a {
    color: inherit;
    text-decoration: none !important;
    display: block;
    height: 100%;
  }

  a:hover {
    color: inherit;
  }
</style>
